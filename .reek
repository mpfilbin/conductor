NestedIterators:
  exclude:
    - "Conductor::Parsers::OptionsParser#self.parse"  # should be refactored
    - "Conductor::Parsers::StackFileParser#contents_with_symbolized_keys" # Unavoidable
    - "Conductor::Kernel::Subprocess#spawn"
    - "Conductor::Commands::OrchestrateCommand#execute"
TooManyStatements:
  exclude:
    - "Conductor::Parsers::OptionsParser#self.parse" # should be refactored
    - "Conductor::Kernel::Subprocess#spawn"
    - "Conductor::Commands::OrchestrateCommand#execute"
NilCheck:
  exclude:
    - "Conductor::Kernel::Subprocess#spawn"
    - "Conductor::Commands::OrchestrateCommand#execute"
FeatureEnvy:
  exclude:
    - "Conductor::Logging::FileLogger#initialize"